{
  "info": {
    "_postman_id": "unique-id",
    "name": "Template Sharing Platform API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"username\": \"testuser\",\n  \"password\": \"testpassword\",\n  \"role\": \"user\"\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/auth/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"password\": \"testpassword\"\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Templates",
      "item": [
        {
          "name": "Create Template",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" },
              { "key": "Content-Type", "value": "multipart/form-data" }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "title", "value": "Sample Template" },
                { "key": "description", "value": "A sample template description" },
                { "key": "image", "type": "file", "src": "path/to/image.png" }
              ]
            },
            "url": {
              "raw": "http://localhost:8000/api/templates",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "templates"]
            }
          }
        },
        {
          "name": "Get All Templates",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{access_token}}" }],
            "url": {
              "raw": "http://localhost:8000/api/templates",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "templates"]
            }
          }
        },
        {
          "name": "Get Template by ID",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{access_token}}" }],
            "url": {
              "raw": "http://localhost:8000/api/templates/{template_id}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "templates", "{template_id}"]
            }
          }
        },
        {
          "name": "Update Template",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" },
              { "key": "Content-Type", "value": "multipart/form-data" }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "title", "value": "Updated Template Title" },
                { "key": "description", "value": "Updated description" },
                { "key": "image", "type": "file", "src": "path/to/new_image.png" }
              ]
            },
            "url": {
              "raw": "http://localhost:8000/api/templates/{template_id}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "templates", "{template_id}"]
            }
          }
        },
        {
          "name": "Delete Template",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{access_token}}" }],
            "url": {
              "raw": "http://localhost:8000/api/templates/{template_id}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "templates", "{template_id}"]
            }
          }
        }
      ]
    }
  ]
}
